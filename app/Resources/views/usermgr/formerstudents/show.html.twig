{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="row">

            <div class="col-4">
                <h4 class="display-4">{{ formerStudent.vName }}<small> {{ formerStudent.vSurnames }} </small></h4>
                <ul class="list-inline">
                    <li class="list-inline-item">{{ formerStudent.vNif }} </li>
                    <li class="list-inline-item ml-auto">{{ formerStudent.dBirthDate|date('Y-m-d') }}</li>
                </ul>
                <ul class="list-group">
                    <li class="list-group-item">{{ formerStudent.vAddress }} </li>
                    <li class="list-group-item">Vehicle: <td>{% if formerStudent.bVehicle %}Yes{% else %}No{% endif %}</td></li>
                </ul>
            </div>

            <div class="col-8" >
                    <div class="d-flex justify-content-end">
                        {% if formerStudent.username == app.user.username %}
                        <ul>
                            <li class="list-inline-item ">
                                <a class="btn btn-outline-secondary" href="{{ path('formerstudents_edit', { 'username': formerStudent.username }) }}"><span class="fa fa-pencil"></span> edit</a>
                            </li>
                        </ul>
                        {% endif %}
                    </div>
                    {# Values of CV from the Former Student
                     Every element of the composed CV apperas.#}
                    {% for cv in cvs %}
                            {{ include('cvmgr/show.html.twig', { 'CV': cv }) }}
                    {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}
