{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card bg-light">
                    <div class="card-header d-flex justify-content-between  bg-dark text-white">
                        <div>
                            <h5 class="">Job applications</h5>
                        </div>
                    </div>

                    <div class="card-body">

                        <ul class="list-group">
                            {% for application in applications %}

                                <div class="card list-group-item ">
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Application state</h6></div>
                                                <div class="lead">{{ application.vStatus }}</div >
                                            </li>

                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Offer code</h6></div>
                                                <div class="lead">{{ application.offer.vOfferCode }}</div >
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Position</h6></div>
                                                <div class="lead">{{ application.offer.vPosition }}</div>
                                            </li>

                                            <li class="list-group-item pb-2 ml-auto border-left-0 border-right-0 border-bottom-0 ">
                                                <ul class="list-inline">

                                                    <li class="list-inline-item">
                                                        <a class="btn btn-outline-primary" href="{{ path('offers_show', { 'id': application.offer.id }) }}">
                                                            <span class="fa fa-info p-2"> </span>show Offer
                                                        </a>
                                                    </li>

                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <hr/>

                            {% endfor %}
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
