{% extends 'base.html.twig' %}
{% block navbar %}
    {% include 'navbar/empty.html.twig' %}
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="row">

            <div class="col-8 mx-auto">

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Other knowledge</h3>
                        <h4 class="card-subtitle mb-2 text-muted">Add new</h4>
                        <div class="card-text">
                            {{ form_start(form, {'action': path('other_task_add'), 'method': 'POST'}) }}

                            <div class="border border-white row">
                                <label for="vName" class="col-sm-2 col-form-label">{{ form_label(form.vName) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.vName) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="vTitle"
                                       class="col-sm-2 col-form-label">{{ form_label(form.vTitle) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.vTitle) }}
                                </div>
                            </div>


                            <div class="border border-white  row">
                                <label for="ltextDescription"
                                       class="col-sm-2 col-form-label">{{ form_label(form.ltextDescription) }}</label>
                                <div class="col-sm-10 textarea">
                                    {{ form_widget(form.ltextDescription, {'attr':{'class':'wysiwyg'}}) }}
                                </div>
                            </div>


                            <div class="border border-white  row">
                                <div class="col-sm-4 textarea">
                                    {{ form_widget(form.save) }}
                                </div>
                                <div class="col-sm-4 textarea">
                                    {{ form_widget(form.saveAndAdd) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     <script >

       var sceditor_list = document.getElementsByClassName('wysiwyg');
       for (let item of sceditor_list) {
         console.log(item.id);
         sceditor.create(item, {
           format: 'xhtml',
           style: '../../../build/app.css',
           width: '100%',
           height: '100%',
           toolbarExclude: "emoticon",
           emoticonsEnabled: false
         });
       }
     </script>
 {% endblock %}