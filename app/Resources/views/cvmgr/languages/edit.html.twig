{% for language in  languages %}

    <form class="card my-2" method="post"
          action="{{ path('stdnts_language_edit', {'id_std':CV.formerstudent.id, 'id_language':language.id }) }}">
        <div class="card-header pb-0">
            <div class="form-group row mb-1">
                <label for="vPosition" class="col-sm-2 col-form-label">Name: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="name" value="{{ language.vName }}">
                </div>
            </div>
        </div>
        <div class="card-body pb-0">
            <div class="card-text">
                <div class="form-group row">
                    <label for="vEmployer" class="col-sm-2 col-form-label">vTitle </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="title" value="{{ language.vTitle }}">
                    </div>
                </div>
                <div class="form-group row ">
                    <label for="vLocation" class="col-sm-2 col-form-label">Description </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control wysiwyg" name="description"
                               value="{{ language.ltextDescription }}">
                    </div>
                </div>

            </div>
        </div>

        <div class="card-footer bg-transparent d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-secondary m-2">Save</button>
            <a class="btn btn-outline-danger m-2"
               href="{{ path('stdnts_languages_delete', {'id':language.id, 'username':app.user.username}) }}">Delete</a>
        </div>

    </form>

{% endfor %}