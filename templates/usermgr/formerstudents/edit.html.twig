{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">

            <div class="col-10 mx-auto">

                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Formerstudent edition</h3>
                        <div class="card-text">
                            {{ form_start(edit_form, {'action': path('formerstudents_edit', {'username':formerStudent.username}), 'method': 'POST'}) }}

                            <div class="border border-white row">
                                <label for="vNif" class="col-2 col-form-label">{{ form_label(edit_form.vNif) }}</label>
                                <div class="col-10">
                                    {{ form_widget(edit_form.vNif) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="vName" class="col-2 col-form-label">{{ form_label(edit_form.vName) }}</label>
                                <div class="col-10">
                                    {{ form_widget(edit_form.vName) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="vSurnames" class="col-2 col-form-label">{{ form_label(edit_form.vSurnames) }}</label>
                                <div class="col-10">
                                    {{ form_widget(edit_form.vSurnames) }}
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="vAddress" class="col-2 col-form-label">{{ form_label(edit_form.vAddress) }}</label>
                                <div class="col-10">
                                    {{ form_widget(edit_form.vAddress) }}
                                </div>
                            </div>

                            <div class="border border-white  row">
                                <label for="dBirthDate" class="dBirthDate col-2 col-form-label">{{ form_label(edit_form.dBirthDate) }}</label>
                                <div class="col-10">
                                    <div class="input-group date" data-provide="datepicker">
                                        {{ form_widget(edit_form.dBirthDate) }}
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-th"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="border border-white  row">
                                <label for="bVehicle" class="col-2 col-form-label">{{ form_label(edit_form.bVehicle) }}</label>
                                <div class="col-10 ">
                                    <div class="input-group btn btn-toggle" >
                                        {{ form_widget(edit_form.bVehicle) }}
                                    </div>
                                </div>
                            </div>

                            <div class="border border-white  row">
                                <div class="col-4">
                                    {{ form_widget(edit_form.save) }}
                                </div>
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-10 mx-auto">
                {% for CV in cvs %}
                    {{ include('cvmgr/edit.html.twig') }}
                {% endfor %}
            </div>
        </div>

    </div>
    {% block javascripts %}
        {{ parent() }}
    {% endblock %}
    <script >
      $('.dBirthDate.date').datepicker({
        weekStart: 1,
        startDate: "-Now",
        maxViewMode: 2,
      });
      $('.dStartDate.date').datepicker({
        weekStart: 1,
        startDate: "-Now",
        maxViewMode: 2,
      });
      $('.dEndDate.date').datepicker({
        weekStart: 1,
        startDate: "-Now",
        maxViewMode: 2
      });

      var sceditor_list = document.getElementsByClassName('wysiwyg');
      for (let item of sceditor_list) {
        console.log(item.id);
        sceditor.create(item, {
          format: 'xhtml',
          style: '../../../build/app.css',
          width: '100%',
          height: '100%',
          toolbarExclude: "emoticon",
          emoticonsEnabled: false
        });
      }

    </script>
{% endblock %}